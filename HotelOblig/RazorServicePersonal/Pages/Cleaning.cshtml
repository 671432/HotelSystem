@page
@model RazorServicePersonal.Pages.Cleaning

@{
ViewData["Title"] = "Maintenance Page";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<h2>Cleaning Tasks</h2>
<form method="POST">
    <table class="table">
        <thead>
        <tr>
            <th>Room Number</th>
            <th>Task Description</th>
            <th>Status</th>
            <th>Update Status</th>
            <th>Description(Mark with your name)</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var task in Model.Tasks)
        {
        <tr>
            <td>@task.RoomNr</td>
            <td>@task.Description</td>
            <td>@task.Status</td>
            <td>
                <select name ="status" asp-for="@task.Status" class="form-control">
                    <option value="New">New</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Finished">Finished</option>
                </select>
            </td>
            <td>
                <input name="description" type="text" asp-for="@task.Description" class="form-control" />
                <input name="taskId" type="hidden" asp-for="@task.TaskId" />
            </td>
            <td>
                <button type="submit" class="btn btn-success">Save Changes</button>
            </td>
        </tr>
        }
        </tbody>
    </table>
</form>
</body>
</html>