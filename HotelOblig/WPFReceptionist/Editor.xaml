<Window x:Class="WPFReceptionist.Editor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFReceptionist"
        mc:Ignorable="d"
        Title="Editor" Height="246" Width="340" HorizontalAlignment="Right" VerticalAlignment="Bottom">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF00FFD7"/>
                <GradientStop Color="#FFFD00FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid Margin="21,2,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="69" Width="137">
            <Grid.RowDefinitions>
                <RowDefinition Height="16*"/>
                <RowDefinition Height="53*"/>
            </Grid.RowDefinitions>
            <Label Content="From Date" Margin="28,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.RowSpan="2" />
            <DatePicker x:Name="fromDatePicker" Margin="10,0,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Row="1"/>
        </Grid>

        <Grid Margin="182,8,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="140">
            <Label Content="To Date" Margin="5,-17,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <DatePicker x:Name="toDatePicker" Margin="10,41,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <Grid Margin="8,65,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="150" Width="314">
            <Button Name="Update" Content="Update" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top" Width="140" Click="Update_Click" Height="44" Foreground="White" FontFamily="Bahnschrift" HorizontalContentAlignment="Center">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF00FFED"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Name="Cancel" Content="Cancel Reservation" HorizontalAlignment="Right" Margin="0,28,0,0" VerticalAlignment="Top" Width="140" Click="Cancel_Click" Height="44" Foreground="White" FontFamily="Bahnschrift">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Red"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Name="Checkin" Content="Check In" HorizontalAlignment="Left" Margin="10,0,0,22" VerticalAlignment="Bottom" Height="44" Width="140" Click="Checkin_Click" Foreground="White" FontFamily="Bahnschrift">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF37FF00"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Button Name="Checkout" Content="Check Out" HorizontalAlignment="Right" Margin="0,0,0,22" VerticalAlignment="Bottom" Width="140" Click="Checkout_Click" Height="44" Foreground="White" FontFamily="Bahnschrift">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Red"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </Grid>

    </Grid>
</Window>
