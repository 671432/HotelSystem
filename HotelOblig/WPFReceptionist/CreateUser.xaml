<Window x:Class="WPFReceptionist.CreateUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFReceptionist"
        mc:Ignorable="d"
        Title="CreateUser" Height="302" Width="228">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF48AF9F"/>
                <GradientStop Color="#FFFD87FE" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="Firstname" HorizontalAlignment="Left" Margin="50,48,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="26" Width="108">
        </Label>
        <TextBox Name="Firstname" HorizontalAlignment="Left" Margin="50,74,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="Lastname" HorizontalAlignment="Left" Margin="50,122,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="Phonenumber" HorizontalAlignment="Left" Margin="50,171,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

        <Label Content="Lastname" HorizontalAlignment="Left" Margin="50,92,0,0" VerticalAlignment="Top" Height="30" Width="120"/>
        <Label Content="Phonenumber" HorizontalAlignment="Left" Margin="50,140,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.994,-2.968" Height="26" Width="120"/>
        <Button Name="AddCustomer" Content="Add Customer" HorizontalAlignment="Left" Margin="48,220,0,0" VerticalAlignment="Top" Width="122" Height="34" Click="Button_Click" Foreground="White">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF5AFF00"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
