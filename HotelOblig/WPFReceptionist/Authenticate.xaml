<Window x:Class="WPFReceptionist.Authenticate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFReceptionist"
        mc:Ignorable="d"
        Title="Authenticate" WindowState="Maximized" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFF87FF" Offset="1"/>
                <GradientStop Color="#FF48AF9F"/>
                <GradientStop Color="#FFFD87FE" Offset="0.991"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox Name="firstName" Margin="261,156,419,251" TextWrapping="Wrap" Text="" MinHeight="18" MinWidth="120" Width="120" TextChanged="Name_TextChanged" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox Name="Phone" Margin="261,217,419,196" TextWrapping="Wrap" Text="" MinHeight="18" MinWidth="120" Width="120" TextChanged="Phone_TextChanged" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="First Name" Margin="261,135,419,273" Width="120" Height="26"/>
        <Label Content="Phone" Margin="261,190,419,220" Width="120" Height="24"/>
        <TextBox x:Name="loginFeedback" Margin="197,81,197,328" TextWrapping="Wrap" IsReadOnly="True" Text="{Binding loginFeedback}" TextChanged="loginFeedback_TextChanged" Background="{x:Null}" Height="25" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="Loggin" Content="Log inn" Height="44" Width="140" Click="Loggin_Click" Foreground="White" FontFamily="Bahnschrift" MinWidth="119" MinHeight="36" Margin="455,180,205,210" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FFF1FF00" Offset="0"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>

</Window>
